# Irish Rivers Data Scraper - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================================================
# Data Sources Configuration
# ============================================================================
# JSON array of data sources to scrape
# If not set, defaults to Inniscarra station
DATA_SOURCES_JSON=[{"station_id":"inniscarra","name":"Inniscarra","river":"River Lee","url":"http://www.esbhydro.ie/Lee/04-Inniscarra-Flow.pdf","source_type":"pdf","enabled":true}]

# ============================================================================
# Retry Configuration
# ============================================================================
# Maximum number of retry attempts
RETRY_MAX_ATTEMPTS=3

# Initial backoff time in seconds
RETRY_INITIAL_BACKOFF=1.0

# Maximum backoff time in seconds
RETRY_MAX_BACKOFF=60.0

# Backoff multiplier for exponential backoff
RETRY_BACKOFF_MULTIPLIER=2.0

# Enable jitter to prevent thundering herd (true/false)
RETRY_JITTER=true

# ============================================================================
# Connection Configuration
# ============================================================================
# HTTP connection timeout in seconds
CONNECTION_TIMEOUT=30

# User agent for HTTP requests
USER_AGENT=IrishRiversDataCollector/1.0

# Verify SSL certificates (true/false)
VERIFY_SSL=true

# ============================================================================
# AWS S3 Configuration
# ============================================================================
# S3 bucket name for storing data
S3_BUCKET_NAME=river-data-ireland

# AWS region
S3_REGION=eu-west-1

# S3 key prefixes for different data types
S3_RAW_PREFIX=raw
S3_PARSED_PREFIX=parsed
S3_AGGREGATED_PREFIX=aggregated

# Enable S3 server-side encryption (true/false)
S3_ENABLE_ENCRYPTION=true

# S3 storage class (STANDARD, INTELLIGENT_TIERING, GLACIER, etc.)
S3_STORAGE_CLASS=STANDARD

# ============================================================================
# AWS Credentials (for local development only)
# ============================================================================
# DO NOT set these in production - use IAM roles instead
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_SESSION_TOKEN=your_session_token

# ============================================================================
# Dash0 Observability
# ============================================================================
# Auth token for Dash0 OTLP ingress (used during sam deploy via Makefile)
# DASH0_AUTH_TOKEN=your_dash0_token_here

# OTLP/HTTP endpoint (find yours at Dash0 > Settings > Endpoints)
# DASH0_OTLP_ENDPOINT=https://ingress.europe-west4.gcp.dash0.com

# ============================================================================
# Local Development Options
# ============================================================================
# Use LocalStack for local AWS development (true/false)
# USE_LOCALSTACK=false
# LOCALSTACK_ENDPOINT=http://localhost:4566
